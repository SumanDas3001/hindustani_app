<div class="col-sm-12">
  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Users</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Aadhar</th>
        <th>Birth date</th>
        <th>Father Name</th>
        <th>Chield</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td>
            <a href="<%= user.aadhar %>" id="aadhar_image" width="100">
              <img class="img-thumbnail" src="<%= user.aadhar %>" width="50"/>
            </a>
          </td>
          
          <td><%= user.b_date&.strftime("%d-%b-%Y") %></td>
          <td><%= link_to user.parent.name, parent_path(user.parent.id) %></td>
          <td><%= link_to user.chield.name, chield_path(user.chield.id) %></td>
          <td><%= link_to fa_icon('eye'), user, class: "fa-2x", style: 'color: green' %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_user_path(user), class: "fa-2x", style: 'color: red' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <nav class="pagination d-flex justify-content-center">
    <%= paginate @users, :page_links => false %>
  </nav>
</div>

